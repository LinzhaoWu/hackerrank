{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake build",
            "type": "shell",
            "command": "cmake -DCMAKE_BUILD_TYPE=DEBUG .. -G 'Visual Studio 17 2022'; cmake --build . --config Debug",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "cmake build and run",
            "type": "shell",
            "command": "cmake -DCMAKE_BUILD_TYPE=DEBUG .. -G 'Visual Studio 17 2022'; cmake --build . --config Debug; cd ./src/Debug; ./practice.exe",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "cmake clean",
            "type": "shell",
            "command": "cmake --build . --target clean",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "remove all build",
            "type": "shell",
            "command": "rm * -Recurse",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}